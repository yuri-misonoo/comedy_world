<!DOCTYPE html>
<html>
  <head>
    <title>Comedy World</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%#= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="sticky-top">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container header">

          <div class="logo">
            <%= link_to "Comedy World", root_path, class: 'navbar-brand' %>
          </div>

          <div class="collapse navbar-collapse">
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <%= link_to "Home", '#', class: "nav-link pl-3" %>
              </li>
              <li class="nav-item">
                <%= link_to "SignUp", '#', class: "nav-link pl-3" %>
              </li>
              <li class="nav-item">
                <%= link_to "SignIn", '#', class: "nav-link pl-3" %>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>


    <div class="container">
      <%= yield %>
    </div>

  </body>
</html>
