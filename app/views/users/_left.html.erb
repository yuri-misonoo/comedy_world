<div class="left">
  <div class="d-flex">
  <%= attachment_image_tag user, :profile_image, :fill, 80, 80, format: 'jpeg',
                                                fallback: "no_image.jpg", size: "80x80", class: 'img' %>

  <% if current_user?(user) %>
    <span class="name"><%= current_user.name %></span>
  <% elsif %>
    <span class="name"><%= user.name %></span>
  <% end %>
</div>


<p class="intro"><%= user.introduction %></p><br>
<% if current_user?(user) %>
  <%= link_to ' ', edit_user_path(user), class: 'fas fa-user-edit btn btn-info btn-block' %>
<% end %>
</div>
