<div class="row">
  <div class="col-md-3">
    <%= render 'users/left', user: @user %>
  </div>

  <div class="col-md-8 col-md-offset-1">
    <h3 class="text-center">投稿一覧</h3>
    <div class="search-form">
      <%= form_with url: posts_path, method: :get, local: :true do |f| %>
        <%= f.text_field :search %>
        <%= f.submit '検索' %>
      <% end %>
    </div>
    <%= render 'index', posts: @posts %>
  </div>
</div>
