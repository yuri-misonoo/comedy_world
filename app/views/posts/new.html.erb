<div class="row">
  <div class="col-md-3">
    <%= render 'users/left', user: current_user %>
  </div>

  <div class="col-md-8 col-md-offset-1">
    <h3 class="text-center">新規投稿</h3>
    <%= form_with model: @post, local: true do |f| %>
      <div class="form-group mx-auto mt-5">
        <%= f.label :body, "投稿内容", class: 'form-label' %>
        <%= f.text_area :body, autofocus: true, rows: 5, class: 'form-control' %>
      </div>

      <div class="action text-center">
        <%= f.submit "投稿", class: 'btn btn-info' %>
      </div>
    <% end %>
  </div>
</div>