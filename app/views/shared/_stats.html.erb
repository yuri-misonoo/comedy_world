<!-- userがnilの場合はcurrent_userを代入する -->
<% user ||= current_user %>
<div>
  <strong class="following"><%= link_to user.following.count, following_user_path(user), class: 'link-color' %> following</strong>

  <strong class="follower"><%= link_to user.followers.count, followers_user_path(user), class: 'link-color' %> followers</strong>
</div>