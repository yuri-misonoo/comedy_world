<% if post.favorited_by?(current_user) %>

  <%= link_to post_favorites_path(post), method: :delete, remote: true, class: "fas fa-heart text-danger" do %>
  
    <%= post.favorites.count %>
  <% end %>

<% else %>
  <%= link_to post_favorites_path(post), method: :post, remote: true, class: "fas fa-heart" do %>
    <%= post.favorites.count %>
  <% end %>

<% end %>